.keyboard {
  margin-top: 20px;
  margin-left: 7px;
}

.keyboard-row {
  display: flex;
  column-gap: 5px;
  padding: 10px 0;
}

.button {
  display: flex;
  width: 90px;
  height: 90px;
  background-color: orange;
  border: none;
  border-radius: 10px;
  align-items: center;
  justify-content: center;
  font-size: 1.35rem;
  color: #F1F1F1;
  font-family: Arial, Helvetica, sans-serif;
}

.operator {
  background-color: orangered;
}

.result {
  background-color: teal;
}